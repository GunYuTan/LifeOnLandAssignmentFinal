<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/largeNotificationIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_notification" />

    <TextView
        android:id="@+id/largeNotificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/largeNotificationIcon"
        android:layout_marginStart="16dp"
        android:text="Large Notification Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/largeNotificationContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/largeNotificationTitle"
        android:layout_toEndOf="@id/largeNotificationIcon"
        android:layout_marginStart="16dp"
        android:text="Detailed content here..."
        android:textSize="16sp" />

</RelativeLayout>